<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05265B"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="2017/8/18 16:25:36"
        android:textColor="#fff"
        android:textSize="50sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_weight="0.7"
            android:background="#05265B"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_timing_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#208DAC"
                    android:padding="5dp"
                    android:text="定时"
                    android:textColor="#fff"
                    android:textSize="40dp" />

                <TextView
                    android:id="@+id/tv_parameter_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#7A53BC"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="参数"
                    android:textColor="#fff"
                    android:textSize="40dp" />


                <TextView
                    android:id="@+id/tv_debug_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#D36B42"
                    android:drawableTop="@mipmap/cc"
                    android:gravity="bottom"
                    android:padding="5dp"
                    android:text="调试"
                    android:textColor="#fff"
                    android:textSize="40dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#4884F3"
                        android:gravity="right|bottom"
                        android:padding="20dp"
                        android:text="A"
                        android:textColor="#fff"
                        android:textSize="40sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#1F9C28"
                        android:padding="20dp"
                        android:text="B"
                        android:textColor="#fff"
                        android:textSize="40sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#1F8BA3"
                        android:padding="20dp"
                        android:text="C"
                        android:textColor="#fff"
                        android:textSize="40sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#D46B3F"
                        android:gravity="bottom"
                        android:padding="20dp"
                        android:text="A"
                        android:textColor="#fff"
                        android:textSize="40sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:scaleType="fitXY"
                    android:src="@drawable/ludeng"
                    android:textColor="#fff"
                    android:textSize="40dp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="#05265B"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/zhihuiludeng"
                android:text="调试"
                android:textColor="#fff"
                android:textSize="40dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#275CBB"
                        android:padding="20dp"
                        android:text="全开"
                        android:textColor="#fff"
                        android:layout_marginRight="5dp"
                        android:textSize="40sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#1EA928"
                        android:layout_marginLeft="5dp"
                        android:gravity="bottom|right"
                        android:padding="20dp"
                        android:text="全关"
                        android:textColor="#fff"
                        android:textSize="40sp" />

                </LinearLayout>
            </LinearLayout>


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/zhihuiludeng2"
                android:text="调试"
                android:textColor="#fff"
                android:textSize="40dp" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>